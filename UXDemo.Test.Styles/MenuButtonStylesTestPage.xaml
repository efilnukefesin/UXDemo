<Page x:Class="NET.efilnukefesin.Apps.UXDemo.UXDemo.Test.Styles.MenuButtonStylesTestPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:NET.efilnukefesin.Apps.UXDemo.UXDemo.Test.Styles"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MenuButtonStylesTestPage">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Button Grid.Row="0" Style="{DynamicResource MenuButtonNotHovered}">Unhovered</Button>
        <Button Grid.Row="1" Style="{StaticResource MenuButtonHovered}">Hovered</Button>
        <Button Grid.Row="2" Style="{StaticResource MenuButtonSelected}">Selected</Button>
    </Grid>
</Page>
