<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:NET.efilnukefesin.Apps.UXDemo.Styles.Wpf">
    <Style x:Key="BackgroundLed" TargetType="{x:Type Border}">
        <Setter Property="Background" Value="{StaticResource GlowingLedButtonFrameHoveredBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource GlowingLedButtonFrameNormalBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="2" />
    </Style>
    <Style x:Key="GlowingLed" TargetType="{x:Type Border}">
        <Setter Property="Background" Value="{StaticResource GlowingLedBrush}"/>
        <Setter Property="BorderBrush" Value="White"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="2" />
        <Setter Property="Effect" >
            <Setter.Value>
                <DropShadowEffect BlurRadius="5" ShadowDepth="0" Color="{StaticResource GlowingLedColor}"/>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>